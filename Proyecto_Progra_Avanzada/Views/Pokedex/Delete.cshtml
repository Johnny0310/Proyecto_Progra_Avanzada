    ViewData["Title"] = "Eliminar Registro en Pokedex";
}

<h1>Eliminar Registro en Pokedex</h1>

<h4>Pokedex</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.id_Pokedex)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.id_Pokedex)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PokemonID)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PokemonID)
    </dd>
    <dt class="col-sm-2">
